
set encoding=utf-8
set fileencodings=utf-8,cp950

syntax on
set nocompatible
set ai
set shiftwidth=2
set tabstop=2
set softtabstop=2
set expandtab

set ruler
set backspace=2
set ic
set ru
set hlsearch
set incsearch
set smartindent
set confirm
set history=100
set cursorline

set laststatus=2
set statusline=%4*%<\%m%<[%f\%r%h%w]\ [%{&ff},%{&fileencoding},%Y]%=\[Position=%l,%v,%p%%]

colorscheme torte